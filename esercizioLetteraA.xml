					<salute>
						<s type="sentence" n="s_11">
							<lb xml:id="LL1.10_lb_1r_6" n="18" facs="#LL1.10_line_1r_6"/>
							<abbr>Vro </abbr><expan>V<ex resp="#GS">ost</ex>ro</expan><abbr>affsmo </abbr><expan>aff<ex resp="#GS">ezionatis</ex>s<ex>i</ex>mo</expan> 
							<abbr>A<hi rend="superscript">o </hi></abbr><expan>A<ex>mic</ex>o</expan>
							<lb xml:id="LL1.10_lb_1r_7" n="19" facs="#LL1.10_line_1r_7"/>
							<persName ref="VB">Bellini</persName>
